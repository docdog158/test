<table class='table table-hover table-inverse'>
  <%= link_to '新しい順', books_path(latest: "true") %>
  |<%= link_to '古い順', books_path(old: "true") %>
  |<%= link_to '評価の高い順', books_path(star_count: "true") %>
  
  
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>

      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
    
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>

        <td class=<%= "favorite_btn_" + book.id.to_s %> >
          <%= render "favorites/btn", book: book %>
        </td>
        
        <td><%= render "books/static.rate", book: book %></td>
        
        <td>
          <!--タグリスト-->
          <%#tag_list.each do |list|%>
            <i class="fa-sharp fa-solid fa-tag"></i>
            <%#=link_to list.name,search_tag_path(tag_id: list.id) %>
            <%#="(#{list.books.count})" %>
          <%# end %>
        </td>
        
        
        <td class="comments-count">
          コメント数：<%= book.post_comments.count %>
        </td>
        

        

      </tr>
    <% end %>
  </tbody>
</table>